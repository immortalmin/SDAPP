            <com.example.sdapp.MyEditText
                android:id="@+id/payment_amount"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:DisplayStyle="1"
                app:TextType="0"
