                android:hint="联系人"/>

            <com.example.sdapp.MyEditText
                android:id="@+id/shopID"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:DisplayStyle="1"
                app:TextType="0"
                android:hint="购物平台ID"/>

            <com.example.sdapp.MyEditText
                android:id="@+id/complimentary_items"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:DisplayStyle="1"
                app:TextType="0"
                android:hint="实际赠送物品"/>

            <com.example.sdapp.MyEditText
                android:id="@+id/pattern"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:DisplayStyle="1"
                app:TextType="0"
                android:hint="性质"/>

            <com.example.sdapp.MyEditText
                android:id="@+id/requirements"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:DisplayStyle="1"
                app:TextType="0"
