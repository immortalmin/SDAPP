<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/rounded_corners_gray">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:textColor="#727070"
        android:text="店铺名称："/>
    <TextView
        android:id="@+id/shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv1"
        android:textColor="#D69A96"
        android:textSize="12sp"
        android:text="恩妮诗"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tv1"
        android:textColor="#727070"
        android:textSize="12sp"
        android:text="购物平台ID："/>
    <TextView
        android:id="@+id/shopID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv2"
        android:layout_alignBottom="@+id/tv2"
        android:textColor="#D69A96"
        android:textSize="12sp"
        android:text="tb2342354"/>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/tv2"
        android:textColor="#727070"
        android:textSize="12sp"
        android:text="下单时间："/>
    <TextView
        android:id="@+id/place_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv2"
        android:layout_alignBottom="@+id/tv3"
        android:textColor="#D69A96"
        android:textSize="12sp"
        android:text="2020-10-20"/>

    <TextView
        android:id="@+id/task_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:background="#787A78"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:text="已结算"/>

</RelativeLayout>
